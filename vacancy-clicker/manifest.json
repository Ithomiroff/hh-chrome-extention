{
  "name": "HH VACANCY CLICKER",
  "description": "VACANCY CLICKER",
  "version": "0.00001",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "notifications",
    "activeTab",
    "*://*/*",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://hh.ru/employer/vacancyresponses?*",
        "https://*.hh.ru/employer/vacancyresponses?*"
      ],
      "run_at": "document_end",
      "js": [
        "content/main.js"
      ]
    },
    {
      "matches": [
        "https://hh.ru/employer/negotiations/change_topic?*",
        "https://*.hh.ru/employer/negotiations/change_topic?*"
      ],
      "run_at": "document_end",
      "js": [
        "content/invite.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "HH Vacancy clicker",
    "default_popup": "popup/popup.html",
    "default_icon": "img/vacancy.jpg"
  }
}
